      <r:value>description</r:value>
    </r:attribute>
    <r:attribute name="itemprop">
      <r:value>description</r:value>
    </r:attribute>
    <r:oneOrMore>
      <r:ref name="Flow.model"/>
    </r:oneOrMore>
  </r:element>
</r:define>

<r:define name="Structure.Metadata.Keywords">
